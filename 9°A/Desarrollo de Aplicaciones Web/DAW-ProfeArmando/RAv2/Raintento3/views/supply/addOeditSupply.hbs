<h3>{{viewTitle}}</h3>

<form action="/supply" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{supply._id}}">
    <div class="form-group">
        <label>RFC</label>
        <input type="text" class="form-control" name="RFC" placeholder="RFC" value="{{supply.RFC}}">
        <div class="text-danger">
            {{supply.RFCError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{supply.email}}" >
        <div class="text-danger">
            {{supply.emailError}}
        </div>
    </div>
    <div class="form-group">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{supply.mobile}}" >
    </div>
    <div class="form-row">
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="{{supply.address}}">
        </div>
        <div class="form-group col-md-6">
            <label>Código postal</label>
            <input type="text" class="form-control" name="cp" placeholder="Código postal" value="{{supply.cp}}">
        </div>
    </div>
    <div class="form-group col-md-6">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/supply/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>  
</form>